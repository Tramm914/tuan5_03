<%- include('partials/header') %>

<div class="home-container">
  <h1 class="mb-4 text-center">Chào mừng đến với hệ thống quản lý </h1>

  <!-- Form tìm kiếm -->
  <form method="GET" action="/products" class="d-flex justify-content-center mb-4">
    <input type="text" name="search" class="form-control w-50 me-2" placeholder="Tìm kiếm sản phẩm theo tên...">
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
  </form>

  <!-- Menu chọn theo nhà cung cấp -->
  <div class="menu-suppliers">
    <ul class="list-group">
      <% if (typeof suppliers !== 'undefined') { suppliers.forEach(s => { %>
        <li class="list-group-item">
          <a href="/products?supplier=<%= s._id %>" class="text-decoration-none"><%= s.name %></a>
        </li>
      <% }) } %>
    </ul>
  </div>
</div>

<%- include('partials/footer') %>
