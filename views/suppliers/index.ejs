<%- include('../partials/header') %>
<div class="container">
  <h2>Danh sách nhà cung cấp</h2>
  <a href="/suppliers/create" class="btn">Thêm nhà cung cấp</a>
  <table>
    <thead>
      <tr>
        <th>Tên</th><th>Địa chỉ</th><th>Số điện thoại</th><th>Hành động</th>
      </tr>
    </thead>
    <tbody>
      <% suppliers.forEach(s => { %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.address %></td>
          <td><%= s.phone %></td>
          <td>
            <a href="/suppliers/<%= s._id %>/edit">Sửa</a>
            <form method="POST" action="/suppliers/<%= s._id %>/delete" style="display:inline">
              <button type="submit" onclick="return confirm('Xóa nhà cung cấp này?')">Xóa</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
<%- include('../partials/footer') %>