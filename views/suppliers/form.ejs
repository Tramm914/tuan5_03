<%- include('../partials/header') %>
<div class="container">
  <h2><%= supplier && supplier._id ? 'Sửa nhà cung cấp' : 'Thêm nhà cung cấp' %></h2>
  <form method="POST" action="<%= supplier && supplier._id ? '/suppliers/' + supplier._id + '/edit' : '/suppliers/create' %>">
    <input type="text" name="name" value="<%= supplier.name || '' %>" placeholder="Tên nhà cung cấp" required>
    <input type="text" name="address" value="<%= supplier.address || '' %>" placeholder="Địa chỉ" required>
    <input type="text" name="phone" value="<%= supplier.phone || '' %>" placeholder="Số điện thoại" required>
    <button type="submit"><%= supplier && supplier._id ? 'Cập nhật' : 'Thêm mới' %></button>
  </form>
  <a href="/suppliers">Quay lại</a>
</div>
<%- include('../partials/footer') %>