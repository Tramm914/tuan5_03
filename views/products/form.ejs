<%- include('../partials/header') %>
<div class="container">
  <h2><%= product && product._id ? 'Sửa sản phẩm' : 'Thêm sản phẩm' %></h2>
  <form method="POST" action="<%= product && product._id ? '/products/' + product._id + '/edit' : '/products/create' %>">
    <input type="text" name="name" value="<%= product.name || '' %>" placeholder="Tên sản phẩm" required>
    <input type="number" name="price" value="<%= product.price || '' %>" placeholder="Giá" required>
    <input type="number" name="quantity" value="<%= product.quantity || '' %>" placeholder="Số lượng" required>
    <select name="supplier" required>
      <option value="">-- Nhà cung cấp --</option>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= product.supplier == s._id ? 'selected' : '' %>><%= s.name %></option>
      <% }) %>
    </select>
    <button type="submit"><%= product && product._id ? 'Cập nhật' : 'Thêm mới' %></button>
  </form>
  <a href="/products">Quay lại</a>
</div>
<%- include('../partials/footer') %>